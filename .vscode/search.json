{
    "$schema": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "$id": "search.schema.json",
        "title": "Search Extension Configuration File",
        "description": "schema for search extension",
        "type": "object",
        "properties": {
            "settings": {
                "type": "object",
                "description": "Settings for the extension"
            },
            "searches": {
                "type": "object",
                "description": "Searches that can be run",
                "properties": {
                    "*": {
                        "type": "object",
                        "description": "A search that can be run",
                        "properties": {
                            "regex": {
                                "type": "string",
                                "description": "The regex to search for"
                            },
                            "description": {
                                "type": "string",
                                "description": "A description of the search"
                            }
                        }
                    }
                }
            }
        }
    },
    "settings": {},
    "searches": {
        "trailing_commas": {
            "regex": ",(?=([\\s \\n\\t]*[\\]\\}\\)]))",
            "description": "Finds trailing commas in arrays and objects"
        }
    }
}